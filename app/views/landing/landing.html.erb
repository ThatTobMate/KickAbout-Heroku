
<div class="landing_back reg pure-form pure-form-aligned">
	<div class="social">
	<%= link_to "Login with Twitter", user_omniauth_authorize_path(:twitter), :class => "pure-button button-secondary" %>
	<%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), :class => "pure-button pure-button-primary" %>
	<%= link_to "Login with Google", user_omniauth_authorize_path(:google_oauth2), :class => "pure-button button-error" %>
	</div>
<div class="sign_in">
<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div "pure-control-group"><%= f.label :email %><br />
    <%= f.text_field :email %></div>
  <div "pure-control-group"><%= f.label :password %><br />
    <%= f.password_field :password %></div>
  <div "pure-control-group"><%= f.check_box :remember_me %></div>
  <div "pure-control-group"><%= f.label :remember_me %></div>
  <div "pure-control-group"><%= f.submit 'Sign in' %></div>
  <div "pure-control-group"><%= link_to 'Sign up', new_user_registration_path %></div>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>
</div>
</div>